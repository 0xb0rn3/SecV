{
  "name": "macspoof",
  "version": "0.0.1",
  "category": "network",
  "description": "MAC address spoofing utility for network interface manipulation",
  "author": "Your Name",
  "executable": "./macspoof-wrapper.sh",
  "dependencies": ["ifconfig", "ip"],
  "timeout": 30,
  "concurrent": false,
  "inputs": {
    "interface": {
      "type": "string",
      "required": true,
      "description": "Network interface to modify (e.g., eth0, wlan0)"
    },
    "mac_address": {
      "type": "string",
      "required": true,
      "description": "New MAC address in format XX:XX:XX:XX:XX:XX",
      "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$"
    },
    "platform": {
      "type": "string",
      "required": false,
      "description": "Target platform (auto-detected if not specified)",
      "enum": ["linux", "windows", "macos"]
    }
  },
  "outputs": {
    "success": {
      "type": "boolean",
      "description": "Whether the MAC address was successfully changed"
    },
    "old_mac": {
      "type": "string",
      "description": "Previous MAC address before change"
    },
    "new_mac": {
      "type": "string",
      "description": "New MAC address after change"
    },
    "interface": {
      "type": "string",
      "description": "Interface that was modified"
    }
  }
}
